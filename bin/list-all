#!/usr/bin/env bash

set \
  -o nounset \
  -o pipefail \
  -o errexit

readonly VER_REGEX='v(0|[1-9][0-9]*)\.(0|[1-9][0-9]*)\.(0|[1-9][0-9]*)'

get_git_tags () {
  local -r repo_url="$1"

  local tag
  for tag in $(git ls-remote --tags "${repo_url}"); do
    if [[ ${tag} =~ refs/tags/${VER_REGEX}$ ]]; then
        version="${BASH_REMATCH[1]}.${BASH_REMATCH[2]}.${BASH_REMATCH[3]}"
        echo "${version}"
    fi
  done \
      | LC_ALL=C sort -t '.' -k 1,1n -k 2,2n \
      | tr '\n' ' '
}

list_all () {
  get_git_tags "https://github.com/marp-team/marp-cli" | tr -s ' ' | sed "s/v//"
}

list_all